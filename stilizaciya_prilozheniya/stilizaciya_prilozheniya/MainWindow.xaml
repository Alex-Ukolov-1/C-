        <TextBlock Text="Карибия" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1"></TextBlock>
        <Grid Background="#bae" Panel.ZIndex="0">
            <Button x:Name="rer" Content="Back" HorizontalAlignment="Left" Margin="635,38,0,0" VerticalAlignment="Top"  Click="button2"/>
        </Grid>
        <Grid Grid.Row="2" Background="#445c93"></Grid>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame" Navigated="MainFrame_Navigated"></Frame>
    </Grid>
